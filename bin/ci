#!/bin/sh -eux

WORKING_DIR=$(pwd)

sudo apt-get install m4 pkg-config -y

eval `opam config env`
opam update

find . -type f -name '*.opam' | sort -d | while read P; do
  opam pin add -n "$(basename -s .opam ${P})" . -y --dev
  opam install --deps-only "$(basename -s .opam ${P})"  -y
  eval `opam config env`
done

dune build
dune runtest
